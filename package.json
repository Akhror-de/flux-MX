{
  "name": "flux-pwa",
  "version": "2.0.0",
  "private": true,
  "description": "AI-powered audio analyzer PWA with Node.js 22 backend",
  "author": "Flux AI Team",
  "license": "MIT",
  "homepage": "https://flux-pwa.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/flux-pwa"
  },
  "bugs": {
    "url": "https://github.com/yourusername/flux-pwa/issues"
  },
  "keywords": [
    "audio-analyzer",
    "bpm-detection",
    "key-detection",
    "pwa",
    "nodejs-22",
    "yandex-cloud"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "type": "module",
  "scripts": {
    "start": "node --experimental-vm-modules server.js",
    "dev": "node --watch --env-file=.env server.js",
    "dev:frontend": "serve public -p 3000",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "echo 'Static site - no build required'",
    "deploy": "vercel --prod",
    "deploy:staging": "vercel",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "check-types": "tsc --noEmit",
    "predeploy": "npm run lint && npm run test",
    "postdeploy": "echo 'Deployment complete'",
    "generate-icons": "node scripts/generate-icons.js",
    "optimize-images": "node scripts/optimize-images.js",
    "security-check": "npm audit --audit-level=moderate",
    "update-deps": "npm update --save",
    "clean": "rm -rf node_modules coverage dist",
    "preinstall": "node -v"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^3.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "serve": "^14.2.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "vercel": "^33.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      "last 2 Chrome versions",
      "last 2 Firefox versions",
      "last 2 Safari versions",
      "last 2 Edge versions"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 Firefox version",
      "last 1 Safari version"
    ]
  },
  "volta": {
    "node": "22.0.0",
    "npm": "10.0.0"
  }
}
