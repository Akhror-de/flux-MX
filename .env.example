# Flux PWA Environment Configuration
# Copy this file to .env and fill in the values

# Node.js Environment
NODE_ENV=development
PORT=3000

# Yandex Cloud Configuration
YANDEX_FUNCTION_URL=https://functions.yandexcloud.net/d4ecmila416om4c1gh93
YANDEX_CLOUD_ID=your-cloud-id
YANDEX_FOLDER_ID=your-folder-id
YANDEX_SERVICE_ACCOUNT_ID=your-service-account-id

# API Keys (if needed)
YANDEX_API_KEY=your-api-key
YANDEX_IAM_TOKEN=your-iam-token

# Application Settings
APP_NAME=Flux PWA
APP_VERSION=2.0.0
APP_SECRET=your-secret-key-change-in-production

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (comma separated)
CORS_ORIGINS=http://localhost:3000,https://flux-pwa.vercel.app

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Performance
MAX_FILE_SIZE=26214400  # 25MB in bytes
MAX_REQUEST_SIZE=10485760  # 10MB

# Cache
CACHE_TTL=300000  # 5 minutes in milliseconds
MAX_CACHE_ENTRIES=100

# Analytics (optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=UA-XXXXXX-XX
YANDEX_METRICA_ID=XXXXXXXX

# Monitoring (optional)
SENTRY_DSN=https://xxxxxxxx@sentry.io/xxxxxx
LOG_ROCKET_APP_ID=flux-pwa/xxxxxx
